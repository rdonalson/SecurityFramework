@model IEnumerable<SecurityFramework.Areas.Access.Models.Entity.vwAreaAndRoleAndRoute>

@{
    ViewBag.Title = "Roles & Routes";
}

<h2>Roles & Routes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed-max">
    <tr>
        <th>Area & Role</th>
        <th>Route</th>
        <th>Bread Crumb</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AreaAndRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoutePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreadCrumb)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>