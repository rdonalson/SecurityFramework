@model SecurityFramework.Areas.Access.Models.Entity.RoleRoute

@{
    ViewBag.Title = "Edit Role & Route";
}

<h2>Edit Role & Route</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Role & Route</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, "Area & Role", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("RoleId", null, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.RoleId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RouteId, "Route", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("RouteId", null, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.RouteId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>